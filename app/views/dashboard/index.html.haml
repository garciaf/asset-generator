.space-y-6
  / Header
  .bg-white.shadow
    .px-4.py-5.sm:p-6
      %h1.text-3xl.font-bold.leading-tight.text-gray-900 Dashboard
      %p.mt-2.max-w-4xl.text-sm.text-gray-500
        Welcome to Asset Generator - Create and manage AI-generated images with custom styles and variations

  / Stats
  .grid.grid-cols-1.gap-5.sm:grid-cols-3
    .bg-white.overflow-hidden.shadow.rounded-lg
      .p-5
        .flex.items-center
          .flex-shrink-0
            %svg.h-6.w-6.text-gray-400{"aria-hidden" => "true", fill: "none", stroke: "currentColor", "stroke-width" => "1.5", viewbox: "0 0 24 24"}
              %path{"stroke-linecap" => "round", "stroke-linejoin" => "round", d: "M9.53 16.122a3 3 0 00-5.78 1.128 2.25 2.25 0 01-2.4 0 3 3 0 00-1.07-4.131A48.633 48.633 0 0112 5.25c2.587 0 5.084.205 7.47.598a3 3 0 001.071 4.131 2.25 2.25 0 01-2.4 0 3 3 0 00-5.781-1.128 48.629 48.629 0 01-6.36 6.243z"}
          .ml-5.w-0.flex-1
            %dl
              %dt.text-sm.font-medium.text-gray-500.truncate Total Styles
              %dd
                .text-lg.font-medium.text-gray-900= @styles_count || 0

    .bg-white.overflow-hidden.shadow.rounded-lg
      .p-5
        .flex.items-center
          .flex-shrink-0
            %svg.h-6.w-6.text-gray-400{"aria-hidden" => "true", fill: "none", stroke: "currentColor", "stroke-width" => "1.5", viewbox: "0 0 24 24"}
              %path{"stroke-linecap" => "round", "stroke-linejoin" => "round", d: "m2.25 15.75 5.159-5.159a2.25 2.25 0 0 1 3.182 0l5.159 5.159m-1.5-1.5 1.409-1.409a2.25 2.25 0 0 1 3.182 0l2.909 2.909m-18 3.75h16.5a1.5 1.5 0 0 0 1.5-1.5V6a1.5 1.5 0 0 0-1.5-1.5H3.75A1.5 1.5 0 0 0 2.25 6v12a1.5 1.5 0 0 0 1.5 1.5Zm10.5-11.25h.008v.008h-.008V8.25Zm.375 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Z"}
          .ml-5.w-0.flex-1
            %dl
              %dt.text-sm.font-medium.text-gray-500.truncate Generated Images
              %dd
                .text-lg.font-medium.text-gray-900= @images_count || 0

    .bg-white.overflow-hidden.shadow.rounded-lg
      .p-5
        .flex.items-center
          .flex-shrink-0
            %svg.h-6.w-6.text-gray-400{"aria-hidden" => "true", fill: "none", stroke: "currentColor", "stroke-width" => "1.5", viewbox: "0 0 24 24"}
              %path{"stroke-linecap" => "round", "stroke-linejoin" => "round", d: "M6 20.25h12m-7.5-3v3m3-3v3m-10.5-3h15m-15 0a2.25 2.25 0 002.25-2.25V6.75m10.5 10.5a2.25 2.25 0 002.25-2.25V6.75m0 0V4.5a2.25 2.25 0 00-2.25-2.25H6.75a2.25 2.25 0 00-2.25 2.25v2.25m0 0h15M3.75 9h16.5"}
          .ml-5.w-0.flex-1
            %dl
              %dt.text-sm.font-medium.text-gray-500.truncate Total Variations
              %dd
                .text-lg.font-medium.text-gray-900= @variations_count || 0

  / Quick Actions
  .bg-white.shadow.rounded-lg
    .px-4.py-5.sm:p-6
      %h3.text-lg.leading-6.font-medium.text-gray-900 Quick Actions
      .mt-4.grid.grid-cols-1.gap-4.sm:grid-cols-2.lg:grid-cols-4
        = link_to new_style_path, class: "relative rounded-lg border border-gray-300 bg-white px-6 py-5 shadow-sm flex items-center space-x-3 hover:border-gray-400 focus-within:ring-2 focus-within:ring-offset-2 focus-within:ring-indigo-500" do
          .flex-shrink-0
            %div.h-10.w-10.rounded-lg.bg-indigo-500.flex.items-center.justify-center
              %svg.h-6.w-6.text-white{"aria-hidden" => "true", fill: "none", stroke: "currentColor", "stroke-width" => "1.5", viewbox: "0 0 24 24"}
                %path{"stroke-linecap" => "round", "stroke-linejoin" => "round", d: "M12 4.5v15m7.5-7.5h-15"}
          .flex-1.min-w-0
            %span.absolute.inset-0{"aria-hidden" => "true"}
            %p.text-sm.font-medium.text-gray-900 Create New Style
            %p.text-sm.text-gray-500 Define a new style with prompts

        = link_to new_image_request_path, class: "relative rounded-lg border border-gray-300 bg-white px-6 py-5 shadow-sm flex items-center space-x-3 hover:border-gray-400 focus-within:ring-2 focus-within:ring-offset-2 focus-within:ring-indigo-500" do
          .flex-shrink-0
            %div.h-10.w-10.rounded-lg.bg-green-500.flex.items-center.justify-center
              %svg.h-6.w-6.text-white{"aria-hidden" => "true", fill: "none", stroke: "currentColor", "stroke-width" => "1.5", viewbox: "0 0 24 24"}
                %path{"stroke-linecap" => "round", "stroke-linejoin" => "round", d: "m2.25 15.75 5.159-5.159a2.25 2.25 0 0 1 3.182 0l5.159 5.159m-1.5-1.5 1.409-1.409a2.25 2.25 0 0 1 3.182 0l2.909 2.909m-18 3.75h16.5a1.5 1.5 0 0 0 1.5-1.5V6a1.5 1.5 0 0 0-1.5-1.5H3.75A1.5 1.5 0 0 0 2.25 6v12a1.5 1.5 0 0 0 1.5 1.5Zm10.5-11.25h.008v.008h-.008V8.25Zm.375 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Z"}
          .flex-1.min-w-0
            %span.absolute.inset-0{"aria-hidden" => "true"}
            %p.text-sm.font-medium.text-gray-900 Generate Image
            %p.text-sm.text-gray-500 Create new AI-generated image

        = link_to new_variation_request_path, class: "relative rounded-lg border border-gray-300 bg-white px-6 py-5 shadow-sm flex items-center space-x-3 hover:border-gray-400 focus-within:ring-2 focus-within:ring-offset-2 focus-within:ring-indigo-500" do
          .flex-shrink-0
            %div.h-10.w-10.rounded-lg.bg-purple-500.flex.items-center.justify-center
              %svg.h-6.w-6.text-white{"aria-hidden" => "true", fill: "none", stroke: "currentColor", "stroke-width" => "1.5", viewbox: "0 0 24 24"}
                %path{"stroke-linecap" => "round", "stroke-linejoin" => "round", d: "M6 20.25h12m-7.5-3v3m3-3v3m-10.5-3h15m-15 0a2.25 2.25 0 002.25-2.25V6.75m10.5 10.5a2.25 2.25 0 002.25-2.25V6.75m0 0V4.5a2.25 2.25 0 00-2.25-2.25H6.75a2.25 2.25 0 00-2.25-2.25v2.25m0 0h15M3.75 9h16.5"}
          .flex-1.min-w-0
            %span.absolute.inset-0{"aria-hidden" => "true"}
            %p.text-sm.font-medium.text-gray-900 Create Variation
            %p.text-sm.text-gray-500 Generate variations of existing images

        = link_to images_path, class: "relative rounded-lg border border-gray-300 bg-white px-6 py-5 shadow-sm flex items-center space-x-3 hover:border-gray-400 focus-within:ring-2 focus-within:ring-offset-2 focus-within:ring-indigo-500" do
          .flex-shrink-0
            %div.h-10.w-10.rounded-lg.bg-orange-500.flex.items-center.justify-center
              %svg.h-6.w-6.text-white{"aria-hidden" => "true", fill: "none", stroke: "currentColor", "stroke-width" => "1.5", viewbox: "0 0 24 24"}
                %path{"stroke-linecap" => "round", "stroke-linejoin" => "round", d: "M3.75 6A2.25 2.25 0 016 3.75h2.25A2.25 2.25 0 0110.5 6v2.25a2.25 2.25 0 01-2.25 2.25H6a2.25 2.25 0 01-2.25-2.25V6zM3.75 15.75A2.25 2.25 0 016 13.5h2.25a2.25 2.25 0 012.25 2.25V18a2.25 2.25 0 01-2.25 2.25H6A2.25 2.25 0 013.75 18v-2.25zM13.5 6a2.25 2.25 0 012.25-2.25H18A2.25 2.25 0 0120.25 6v2.25A2.25 2.25 0 0118 10.5h-2.25a2.25 2.25 0 01-2.25-2.25V6zM13.5 15.75a2.25 2.25 0 012.25-2.25H18a2.25 2.25 0 012.25 2.25V18A2.25 2.25 0 0118 20.25h-2.25A2.25 2.25 0 0113.5 18v-2.25z"}
          .flex-1.min-w-0
            %span.absolute.inset-0{"aria-hidden" => "true"}
            %p.text-sm.font-medium.text-gray-900 Browse Gallery
            %p.text-sm.text-gray-500 View all generated images

  / Recent Images
  .bg-white.shadow.rounded-lg
    .px-4.py-5.sm:p-6
      .flex.items-center.justify-between
        %h3.text-lg.leading-6.font-medium.text-gray-900 Recent Images
        = link_to "View all", images_path, class: "text-sm font-medium text-indigo-600 hover:text-indigo-500"

      - if @recent_images&.any?
        .mt-6.grid.grid-cols-2.gap-4.sm:grid-cols-3.lg:grid-cols-6
          - @recent_images.each do |image|
            = link_to image_path(image), class: "group relative" do
              .w-full.h-32.bg-gray-200.rounded-lg.overflow-hidden.group-hover:opacity-75.transition-opacity
                .w-full.h-full.object-center.object-cover.bg-gradient-to-br.from-indigo-100.to-purple-100.flex.items-center.justify-center
                  - if image.file.attached?
                    = image_tag image.file, class: "w-full h-full object-cover", alt: "Generated image"
                  - else
                    %svg.h-8.w-8.text-gray-400{"aria-hidden" => "true", fill: "none", stroke: "currentColor", "stroke-width" => "1.5", viewbox: "0 0 24 24"}
                      %path{"stroke-linecap" => "round", "stroke-linejoin" => "round", d: "m2.25 15.75 5.159-5.159a2.25 2.25 0 0 1 3.182 0l5.159 5.159m-1.5-1.5 1.409-1.409a2.25 2.25 0 0 1 3.182 0l2.909 2.909m-18 3.75h16.5a1.5 1.5 0 0 0 1.5-1.5V6a1.5 1.5 0 0 0-1.5-1.5H3.75A1.5 1.5 0 0 0 2.25 6v12a1.5 1.5 0 0 0 1.5 1.5Zm10.5-11.25h.008v.008h-.008V8.25Zm.375 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Z"}

      - else
        .mt-6.text-center
          %svg.mx-auto.h-12.w-12.text-gray-400{"aria-hidden" => "true", fill: "none", stroke: "currentColor", "stroke-width" => "1.5", viewbox: "0 0 24 24"}
            %path{"stroke-linecap" => "round", "stroke-linejoin" => "round", d: "m2.25 15.75 5.159-5.159a2.25 2.25 0 0 1 3.182 0l5.159 5.159m-1.5-1.5 1.409-1.409a2.25 2.25 0 0 1 3.182 0l2.909 2.909m-18 3.75h16.5a1.5 1.5 0 0 0 1.5-1.5V6a1.5 1.5 0 0 0-1.5-1.5H3.75A1.5 1.5 0 0 0 2.25 6v12a1.5 1.5 0 0 0 1.5 1.5Zm10.5-11.25h.008v.008h-.008V8.25Zm.375 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Z"}
          %h3.mt-2.text-sm.font-medium.text-gray-900 No images yet
          %p.mt-1.text-sm.text-gray-500 Get started by creating your first AI-generated image.
          .mt-6
            = link_to new_image_request_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do
              %svg.h-5.w-5.mr-2{"aria-hidden" => "true", fill: "none", stroke: "currentColor", "stroke-width" => "1.5", viewbox: "0 0 24 24"}
                %path{"stroke-linecap" => "round", "stroke-linejoin" => "round", d: "M12 4.5v15m7.5-7.5h-15"}
              Generate Your First Image
