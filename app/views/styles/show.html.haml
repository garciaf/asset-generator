.space-y-6
  / Header
  .bg-white.shadow
    .px-4.py-5.sm:p-6
      .flex.items-center.justify-between
        %div
          %h1.text-3xl.font-bold.leading-tight.text-gray-900= @style.title
          %p.mt-2.max-w-4xl.text-sm.text-gray-500
            Style details and prompt template
        %div
          = link_to edit_style_path(@style), class: "btn-primary mr-3" do
            %svg.h-5.w-5.mr-2{"aria-hidden" => "true", fill: "none", stroke: "currentColor", "stroke-width" => "1.5", viewbox: "0 0 24 24"}
              %path{"stroke-linecap" => "round", "stroke-linejoin" => "round", d: "M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10"}
            Edit Style
          = link_to styles_path, class: "btn-secondary" do
            %svg.h-5.w-5.mr-2{"aria-hidden" => "true", fill: "none", stroke: "currentColor", "stroke-width" => "1.5", viewbox: "0 0 24 24"}
              %path{"stroke-linecap" => "round", "stroke-linejoin" => "round", d: "M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18"}
            Back to Styles

  / Style Details
  .bg-white.shadow.rounded-lg
    .px-4.py-5.sm:p-6
      .space-y-6
        / Title
        %div
          %h3.text-lg.font-medium.text-gray-900 Style Title
          %p.mt-1.text-sm.text-gray-600= @style.title

        / Prompt
        %div
          %h3.text-lg.font-medium.text-gray-900 Prompt Template
          .mt-1.p-4.bg-gray-50.rounded-lg
            %pre.text-sm.text-gray-800.whitespace-pre-wrap.font-mono= @style.prompt

        / Metadata
        .border-t.border-gray-200.pt-6
          .grid.grid-cols-1.gap-6.sm:grid-cols-2
            %div
              %h3.text-sm.font-medium.text-gray-500 Created
              %p.mt-1.text-sm.text-gray-900= @style.created_at.strftime("%B %d, %Y at %l:%M %p")
            %div
              %h3.text-sm.font-medium.text-gray-500 Last Updated
              %p.mt-1.text-sm.text-gray-900= @style.updated_at.strftime("%B %d, %Y at %l:%M %p")

  / Actions
  .bg-white.shadow.rounded-lg
    .px-4.py-5.sm:p-6
      %h3.text-lg.font-medium.text-gray-900.mb-4 Actions
      .flex.flex-wrap.gap-3
        = link_to new_image_request_path(style_id: @style.id), class: "btn-primary" do
          %svg.h-5.w-5.mr-2{"aria-hidden" => "true", fill: "none", stroke: "currentColor", "stroke-width" => "1.5", viewbox: "0 0 24 24"}
            %path{"stroke-linecap" => "round", "stroke-linejoin" => "round", d: "m2.25 15.75 5.159-5.159a2.25 2.25 0 0 1 3.182 0l5.159 5.159m-1.5-1.5 1.409-1.409a2.25 2.25 0 0 1 3.182 0l2.909 2.909m-18 3.75h16.5a1.5 1.5 0 0 0 1.5-1.5V6a1.5 1.5 0 0 0-1.5-1.5H3.75A1.5 1.5 0 0 0 2.25 6v12a1.5 1.5 0 0 0 1.5 1.5Zm10.5-11.25h.008v.008h-.008V8.25Zm.375 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Z"}
          Generate Image with this Style
        
        = link_to edit_style_path(@style), class: "btn-secondary" do
          %svg.h-5.w-5.mr-2{"aria-hidden" => "true", fill: "none", stroke: "currentColor", "stroke-width" => "1.5", viewbox: "0 0 24 24"}
            %path{"stroke-linecap" => "round", "stroke-linejoin" => "round", d: "M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10"}
          Edit Style

        = link_to @style, method: :delete, 
            class: "text-red-600 hover:text-red-500 border border-red-300 hover:border-red-400 px-4 py-2 rounded-md text-sm font-medium transition-colors",
            confirm: "Are you sure you want to delete this style? This action cannot be undone." do
          %svg.h-4.w-4.mr-2.inline{"aria-hidden" => "true", fill: "none", stroke: "currentColor", "stroke-width" => "1.5", viewbox: "0 0 24 24"}
            %path{"stroke-linecap" => "round", "stroke-linejoin" => "round", d: "M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0"}
          Delete Style
