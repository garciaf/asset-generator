.space-y-6
  / Header
  .bg-white.shadow
    .px-4.py-5.sm:p-6
      .flex.items-center.justify-between
        %div
          %h1.text-3xl.font-bold.leading-tight.text-gray-900 Image Requests
          %p.mt-2.max-w-4xl.text-sm.text-gray-500
            Manage your AI image generation requests
        %div
          = link_to new_image_request_path, class: "btn-primary" do
            %svg.h-5.w-5.mr-2{"aria-hidden" => "true", fill: "none", stroke: "currentColor", "stroke-width" => "1.5", viewbox: "0 0 24 24"}
              %path{"stroke-linecap" => "round", "stroke-linejoin" => "round", d: "M12 4.5v15m7.5-7.5h-15"}
            New Image Request

  / Content
  - if @image_requests.any?
    .bg-white.shadow.overflow-hidden.sm:rounded-lg
      %ul.divide-y.divide-gray-200
        - @image_requests.each do |image_request|
          %li
            .px-4.py-4.sm:px-6
              .flex.items-center.justify-between
                %div.flex.items-center.space-x-4
                  .flex-shrink-0
                    .h-10.w-10.rounded-full.bg-indigo-100.flex.items-center.justify-center
                      %svg.h-6.w-6.text-indigo-600{"aria-hidden" => "true", fill: "none", stroke: "currentColor", "stroke-width" => "1.5", viewbox: "0 0 24 24"}
                        %path{"stroke-linecap" => "round", "stroke-linejoin" => "round", d: "m2.25 15.75 5.159-5.159a2.25 2.25 0 0 1 3.182 0l5.159 5.159m-1.5-1.5 1.409-1.409a2.25 2.25 0 0 1 3.182 0l2.909 2.909m-18 3.75h16.5a1.5 1.5 0 0 0 1.5-1.5V6a1.5 1.5 0 0 0-1.5-1.5H3.75A1.5 1.5 0 0 0 2.25 6v12a1.5 1.5 0 0 0 1.5 1.5Zm10.5-11.25h.008v.008h-.008V8.25Zm.375 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Z"}
                  %div
                    %p.text-sm.font-medium.text-gray-900
                      Style: #{image_request.style.title}
                    %p.text-sm.text-gray-500.mt-1
                      #{truncate(image_request.prompt, length: 100)}
                    %p.text-xs.text-gray-400.mt-1
                      Created #{time_ago_in_words(image_request.created_at)} ago
                %div
                  = link_to image_request, class: "text-indigo-600 hover:text-indigo-900 text-sm font-medium" do
                    View Details
  - else
    .text-center.py-12
      %svg.mx-auto.h-12.w-12.text-gray-400{"aria-hidden" => "true", fill: "none", stroke: "currentColor", "stroke-width" => "1.5", viewbox: "0 0 24 24"}
        %path{"stroke-linecap" => "round", "stroke-linejoin" => "round", d: "m2.25 15.75 5.159-5.159a2.25 2.25 0 0 1 3.182 0l5.159 5.159m-1.5-1.5 1.409-1.409a2.25 2.25 0 0 1 3.182 0l2.909 2.909m-18 3.75h16.5a1.5 1.5 0 0 0 1.5-1.5V6a1.5 1.5 0 0 0-1.5-1.5H3.75A1.5 1.5 0 0 0 2.25 6v12a1.5 1.5 0 0 0 1.5 1.5Zm10.5-11.25h.008v.008h-.008V8.25Zm.375 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Z"}
      %h3.mt-2.text-sm.font-semibold.text-gray-900 No image requests
      %p.mt-1.text-sm.text-gray-500 Get started by creating your first image request.
      .mt-6
        = link_to new_image_request_path, class: "btn-primary" do
          %svg.h-5.w-5.mr-2{"aria-hidden" => "true", fill: "none", stroke: "currentColor", "stroke-width" => "1.5", viewbox: "0 0 24 24"}
            %path{"stroke-linecap" => "round", "stroke-linejoin" => "round", d: "M12 4.5v15m7.5-7.5h-15"}
          New Image Request
